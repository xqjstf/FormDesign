@model PetaPoco.Page<ValidationProfile>
@{
    ViewBag.Title = "验证规则配置";
}
<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h2 class="sub-header">
        <span>
            @ViewBag.Title
        </span>
        <a class="btn btn-default btn-sm  ft-r" href="@Url.Action("SaveValidationProfile")">
            <span class="glyphicon   glyphicon-plus" aria-hidden="true"></span>
        </a>
    </h2>

    <div class="table-responsive">
        <table class="table table-striped  table-hover">
            <thead>
                <tr>
                    <th>名称</th>
                    <th>说明</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (ValidationProfile item in Model.Items)
                {
                    <tr>
                        <td>
                            <a href="@Url.Action("SaveValidationProfile",new { id=item.Id})">@item.Name</a>
                        </td>
                        <td>@item.Remark</td>
                        <td>
                            <a href="@Url.Action("DelValidationProfile",new { id=item.Id})">删除</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <nav aria-label="Page navigation  text-center">
            @Html.Pager(Model.CurrentPage, Model.ItemsPerPage, Model.TotalItems, Model.TotalPages)
        </nav>
    </div>
</div>